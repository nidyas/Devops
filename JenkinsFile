pipeline {
    agent any
    stages {
        stage('Récupération du code source depuis Git') {
            steps {
                git branch: 'main', 
                url: 'https://github.com/nidyas/Devops'
            }
        }
        
        stage('Affichage de la date système') {
            steps {
                sh 'date'
            }
        }
    }
}
